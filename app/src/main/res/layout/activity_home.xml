<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="531dp"
        android:background="@drawable/home"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical"
        android:padding="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lip"
                android:layout_width="49dp"
                android:layout_height="107dp"
                app:srcCompat="@drawable/lipse" />

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:textColor="@color/black"
                    android:text="Hallo, Elfan ðŸ‘‹" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:text="Ayo temukan Homestay yang nyaman dan tempat wisata di Raja Ampat." />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="391dp"
                android:layout_marginTop="120dp"
                android:layout_height="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvpenginapan"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/butonshape2"
                    android:drawableStart="@drawable/smss"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Penginapan"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvspotwisata"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/butonshape2"

                    android:drawableStart="@drawable/smss"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Spot wisata"
                    android:textColor="@color/black" />
            </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:orientation="vertical"/>
</RelativeLayout>