<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".kamarpenginapan_item">
    <androidx.cardview.widget.CardView
        android:background="@color/biru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:background="@color/biru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/iv_wisata"
                android:scaleType="centerCrop"
                android:src="@drawable/bgonboarding2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/black"
                android:text="nama kamar"
                android:id="@+id/tv_namahomestay"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang2"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang2"
                    android:scaleType="fitCenter"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/lato"
                    android:text="100 reviews"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="desckripsi kamar"
                android:id="@+id/tv_wisata"
                android:textSize="15sp"
                android:fontFamily="@font/lato"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/tv_desc"
                    android:layout_width="100dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:text="Daftar keinginan"
                    android:background="@drawable/butonshape2"
                    android:textSize="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="TouchTargetSizeCheck" />
                <Button
                    android:id="@+id/sd"
                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Pilih"
                    android:textSize="10sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/favoriticon2" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/baseline_share_24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
