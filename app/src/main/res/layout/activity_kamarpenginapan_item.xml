<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".kamarpenginapan_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_wisata"
            android:scaleType="fitCenter"
            android:src="@drawable/bg"/>
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_namakamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="nama kamar"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp" />

            <TextView
                android:id="@+id/tv_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Desckripsi"
                android:textSize="12sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp" />

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="harga"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang2"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang2"
                    android:scaleType="fitCenter"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_gravity="left"
                    android:fontFamily="@font/lato"
                    android:text="100 reviews"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tv_kengininan"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/butonshape2"
                    android:maxLength="100"
                    android:text="+ Daftar keinginan"
                    android:textSize="12sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/tv_pilih"
                    android:layout_width="77dp"
                    android:layout_height="40dp"
                    android:background="@drawable/butonshape2"
                    android:maxLength="100"
                    android:text="Pilih"
                    android:textSize="12sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>