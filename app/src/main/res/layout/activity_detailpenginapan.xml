<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Detailpenginapan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:alpha="1"
                android:src="@drawable/bgonboarding2" />
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Mambtron Homestay"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Temukan - tempat ternyaman anda selama perjalanan ke Raja Ampat."
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="150dp"
                    android:id="@+id/tvpenginapan"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/butonshape3"
                    android:drawableStart="@drawable/bed"
                    android:fontFamily="@font/lato_bold"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:text="Pilih kamar"
                    android:textColor="@color/biru" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="393dp"
        android:layout_height="413dp"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteY="243dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_example"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="14dp"
            tools:listitem="@layout/activity_penginapan_item" />

    </ScrollView>
</RelativeLayout>