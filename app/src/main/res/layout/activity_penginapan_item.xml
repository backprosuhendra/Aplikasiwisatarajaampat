<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PenginapanItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/iv_wisata"
            android:scaleType="fitCenter"
            android:src="@drawable/bg"/>
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/black"
                android:text="nama homestay"
                android:id="@+id/tv_namahomestay"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang1"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang2"
                    android:scaleType="fitCenter"></ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bintang2"
                    android:scaleType="fitCenter"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_gravity="left"
                    android:fontFamily="@font/lato"
                    android:text="100 reviews"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="desckripsi homestay"
                android:id="@+id/tv_wisata"
                android:textSize="12sp"
                android:fontFamily="@font/lato"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp"/>
            <Button
                android:id="@+id/tv_desc"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Detail"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>